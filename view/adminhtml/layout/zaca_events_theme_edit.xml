 * Zacatrus Events Admin Theme Edit Layout
 *
 * @category    Zacatrus
 * @package     Zaca_Events
 * @author      Zacatrus
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Zaca\Events\Block\Adminhtml\Theme\Edit" name="theme_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Zaca\Events\Block\Adminhtml\Theme\Edit\Tabs" name="theme_edit_tabs">
                <block class="Zaca\Events\Block\Adminhtml\Theme\Edit\Tab\Main" name="theme_edit_tab_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">theme_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>

