<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">zacatrus_events_store_form.zacatrus_events_store_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Store Information</item>
        <item name="reverseMetadata" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="*/*/save"/>
                <class>save primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>zacatrus_events_store_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>zacatrus_events_store_form.zacatrus_events_store_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="zacatrus_events_store_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="zacatrus_events/store/save"/>
        </settings>
        <dataProvider class="Zaca\Events\Ui\Component\Form\DataProvider" name="zacatrus_events_store_form_data_source">
            <settings>
                <requestFieldName>store_id</requestFieldName>
                <primaryFieldName>store_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Store Details</label>
        </settings>
        <field name="store_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>store_id</dataScope>
            </settings>
        </field>
        <field name="name" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="city" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="is_active" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Is Active</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>

