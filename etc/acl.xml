<?xml version="1.0"?>
<!--
/**
 * Zacatrus Events ACL Configuration
 *
 * @category    Zacatrus
 * @package     Zacatrus_Events
 * @author      Zacatrus
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Zacatrus_Events::config" title="Zacatrus Events Configuration" sortOrder="50"/>
                <resource id="Zacatrus_Events::events" title="Zacatrus Events" sortOrder="100">
                    <resource id="Zacatrus_Events::stores" title="Stores Management" sortOrder="10"/>
                    <resource id="Zacatrus_Events::events_manage" title="Events Management" sortOrder="20"/>
                    <resource id="Zacatrus_Events::leagues" title="Leagues Management" sortOrder="30"/>
                    <resource id="Zacatrus_Events::registrations" title="Registrations Management" sortOrder="40"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

