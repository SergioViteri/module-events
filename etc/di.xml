<?xml version="1.0"?>
<!--
/**
 * Zacatrus Events Dependency Injection Configuration
 *
 * @category    Zacatrus
 * @package     Zaca_Events
 * @author      Zacatrus
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Zaca\Events\Api\StoreRepositoryInterface" type="Zaca\Events\Model\StoreRepository"/>
    <preference for="Zaca\Events\Api\EventRepositoryInterface" type="Zaca\Events\Model\EventRepository"/>
    <preference for="Zaca\Events\Api\RegistrationRepositoryInterface" type="Zaca\Events\Model\RegistrationRepository"/>
    <preference for="Zaca\Events\Api\LeagueRepositoryInterface" type="Zaca\Events\Model\LeagueRepository"/>
    
    <!-- Grid Collections -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="zacatrus_events_store_listing_data_source" xsi:type="string">Zaca\Events\Model\ResourceModel\Store\Grid\Collection</item>
                <item name="zacatrus_events_event_listing_data_source" xsi:type="string">Zaca\Events\Model\ResourceModel\Event\Grid\Collection</item>
                <item name="zacatrus_events_league_listing_data_source" xsi:type="string">Zaca\Events\Model\ResourceModel\League\Grid\Collection</item>
                <item name="zacatrus_events_registration_listing_data_source" xsi:type="string">Zaca\Events\Model\ResourceModel\Registration\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    
    <virtualType name="zacatrus_events_store_listing_data_source" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResultReporting" shared="false">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Zaca\Events\Model\ResourceModel\Store\Grid\Collection</argument>
        </arguments>
    </virtualType>
    
    <virtualType name="zacatrus_events_event_listing_data_source" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResultReporting" shared="false">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Zaca\Events\Model\ResourceModel\Event\Grid\Collection</argument>
        </arguments>
    </virtualType>
    
    <virtualType name="zacatrus_events_league_listing_data_source" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResultReporting" shared="false">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Zaca\Events\Model\ResourceModel\League\Grid\Collection</argument>
        </arguments>
    </virtualType>
    
    <virtualType name="zacatrus_events_registration_listing_data_source" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResultReporting" shared="false">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Zaca\Events\Model\ResourceModel\Registration\Grid\Collection</argument>
        </arguments>
    </virtualType>
</config>

