<?xml version="1.0"?>
<!--
/**
 * Zacatrus Events Database Schema
 *
 * @category    Zacatrus
 * @package     Zaca_Events
 * @author      Zacatrus
 */
-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zacatrus_events_store" resource="default" engine="innodb" comment="Zacatrus Events Stores">
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" identity="true" comment="Store ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Store Name"/>
        <column xsi:type="varchar" name="city" length="255" nullable="false" comment="City"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="store_id"/>
        </constraint>
        <index referenceId="IDX_ZACATRUS_EVENTS_STORE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zacatrus_events_league" resource="default" engine="innodb" comment="Zacatrus Events Leagues">
        <column xsi:type="int" name="league_id" unsigned="true" nullable="false" identity="true" comment="League ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="League Name"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <column xsi:type="date" name="start_date" nullable="false" comment="Start Date"/>
        <column xsi:type="date" name="end_date" nullable="false" comment="End Date"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="league_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_LEAGUE_STORE_ID" table="zacatrus_events_league" column="store_id" referenceTable="zacatrus_events_store" referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="IDX_ZACATRUS_EVENTS_LEAGUE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_LEAGUE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zacatrus_events_event" resource="default" engine="innodb" comment="Zacatrus Events">
        <column xsi:type="int" name="event_id" unsigned="true" nullable="false" identity="true" comment="Event ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Event Name"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <column xsi:type="varchar" name="event_type" length="50" nullable="false" comment="Event Type (casual, league, special)"/>
        <column xsi:type="datetime" name="start_date" nullable="false" comment="Start Date"/>
        <column xsi:type="int" name="duration_minutes" unsigned="true" nullable="false" comment="Duration in Minutes"/>
        <column xsi:type="int" name="max_slots" unsigned="true" nullable="false" comment="Maximum Slots"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="varchar" name="recurrence_type" length="20" nullable="false" default="none" comment="Recurrence Type (none, quincenal)"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="event_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_EVENT_STORE_ID" table="zacatrus_events_event" column="store_id" referenceTable="zacatrus_events_store" referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_START_DATE" indexType="btree">
            <column name="start_date"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_EVENT_TYPE" indexType="btree">
            <column name="event_type"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zacatrus_events_event_league" resource="default" engine="innodb" comment="Zacatrus Events Event League Relation">
        <column xsi:type="int" name="event_id" unsigned="true" nullable="false" comment="Event ID"/>
        <column xsi:type="int" name="league_id" unsigned="true" nullable="false" comment="League ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="event_id"/>
            <column name="league_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_EVENT_LEAGUE_EVENT_ID" table="zacatrus_events_event_league" column="event_id" referenceTable="zacatrus_events_event" referenceColumn="event_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_EVENT_LEAGUE_LEAGUE_ID" table="zacatrus_events_event_league" column="league_id" referenceTable="zacatrus_events_league" referenceColumn="league_id" onDelete="CASCADE"/>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_LEAGUE_EVENT_ID" indexType="btree">
            <column name="event_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_EVENT_LEAGUE_LEAGUE_ID" indexType="btree">
            <column name="league_id"/>
        </index>
    </table>

    <table name="zacatrus_events_registration" resource="default" engine="innodb" comment="Zacatrus Events Registrations">
        <column xsi:type="int" name="registration_id" unsigned="true" nullable="false" identity="true" comment="Registration ID"/>
        <column xsi:type="int" name="event_id" unsigned="true" nullable="false" comment="Event ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="status" length="20" nullable="false" default="confirmed" comment="Status (confirmed, waitlist)"/>
        <column xsi:type="datetime" name="registration_date" nullable="false" comment="Registration Date"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="registration_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_REGISTRATION_EVENT_ID" table="zacatrus_events_registration" column="event_id" referenceTable="zacatrus_events_event" referenceColumn="event_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_REGISTRATION_CUSTOMER_ID" table="zacatrus_events_registration" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="UNQ_ZACATRUS_EVENTS_REGISTRATION_EVENT_CUSTOMER">
            <column name="event_id"/>
            <column name="customer_id"/>
        </constraint>
        <index referenceId="IDX_ZACATRUS_EVENTS_REGISTRATION_EVENT_ID" indexType="btree">
            <column name="event_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_REGISTRATION_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_REGISTRATION_STATUS" indexType="btree">
            <column name="status"/>
        </index>
    </table>
</schema>

