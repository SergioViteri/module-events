<?xml version="1.0"?>
<!--
/**
 * Zacatrus Events Database Schema
 *
 * @category    Zacatrus
 * @package     Zaca_Events
 * @author      Zacatrus
 */
-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zacatrus_events_store" resource="default" engine="innodb" comment="Zacatrus Events Stores">
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" identity="true" comment="Store ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Store Name"/>
        <column xsi:type="varchar" name="city" length="255" nullable="false" comment="City"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="store_id"/>
        </constraint>
        <index referenceId="IDX_ZACATRUS_EVENTS_STORE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zacatrus_events_league" resource="default" engine="innodb" comment="Zacatrus Events Leagues">
        <column xsi:type="int" name="league_id" unsigned="true" nullable="false" identity="true" comment="League ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="League Name"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <column xsi:type="date" name="start_date" nullable="false" comment="Start Date"/>
        <column xsi:type="date" name="end_date" nullable="false" comment="End Date"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="league_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACATRUS_EVENTS_LEAGUE_STORE_ID" table="zacatrus_events_league" column="store_id" referenceTable="zacatrus_events_store" referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="IDX_ZACATRUS_EVENTS_LEAGUE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="IDX_ZACATRUS_EVENTS_LEAGUE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zaca_events_theme" resource="default" engine="innodb" comment="Zacatrus Events Themes">
        <column xsi:type="int" name="theme_id" unsigned="true" nullable="false" identity="true" comment="Theme ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Theme Name"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="false" default="0" comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="theme_id"/>
        </constraint>
        <index referenceId="IDX_ZACA_EVENTS_THEME_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_THEME_SORT_ORDER" indexType="btree">
            <column name="sort_order"/>
        </index>
    </table>

    <table name="zaca_events_meet" resource="default" engine="innodb" comment="Zacatrus Events Meets">
        <column xsi:type="int" name="meet_id" unsigned="true" nullable="false" identity="true" comment="Meet ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Meet Name"/>
        <column xsi:type="int" name="location_id" unsigned="true" nullable="false" comment="Location ID"/>
        <column xsi:type="varchar" name="meet_type" length="50" nullable="false" comment="Meet Type (casual, league, special)"/>
        <column xsi:type="int" name="theme_id" unsigned="true" nullable="true" comment="Theme ID"/>
        <column xsi:type="datetime" name="start_date" nullable="false" comment="Start Date"/>
        <column xsi:type="int" name="duration_minutes" unsigned="true" nullable="false" comment="Duration in Minutes"/>
        <column xsi:type="int" name="max_slots" unsigned="true" nullable="false" comment="Maximum Slots"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="varchar" name="recurrence_type" length="20" nullable="false" default="none" comment="Recurrence Type (none, quincenal)"/>
        <column xsi:type="datetime" name="end_date" nullable="true" comment="End Date (for recurring events)"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="meet_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_MEET_LOCATION_ID" table="zaca_events_meet" column="location_id" referenceTable="zaca_events_location" referenceColumn="location_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_MEET_THEME_ID" table="zaca_events_meet" column="theme_id" referenceTable="zaca_events_theme" referenceColumn="theme_id" onDelete="SET NULL"/>
        <index referenceId="IDX_ZACA_EVENTS_MEET_LOCATION_ID" indexType="btree">
            <column name="location_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_MEET_THEME_ID" indexType="btree">
            <column name="theme_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_MEET_START_DATE" indexType="btree">
            <column name="start_date"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_MEET_MEET_TYPE" indexType="btree">
            <column name="meet_type"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_MEET_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="zaca_events_meet_league" resource="default" engine="innodb" comment="Zacatrus Events Meet League Relation">
        <column xsi:type="int" name="meet_id" unsigned="true" nullable="false" comment="Meet ID"/>
        <column xsi:type="int" name="league_id" unsigned="true" nullable="false" comment="League ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="meet_id"/>
            <column name="league_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_MEET_LEAGUE_MEET_ID" table="zaca_events_meet_league" column="meet_id" referenceTable="zaca_events_meet" referenceColumn="meet_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_MEET_LEAGUE_LEAGUE_ID" table="zaca_events_meet_league" column="league_id" referenceTable="zacatrus_events_league" referenceColumn="league_id" onDelete="CASCADE"/>
        <index referenceId="IDX_ZACA_EVENTS_MEET_LEAGUE_MEET_ID" indexType="btree">
            <column name="meet_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_MEET_LEAGUE_LEAGUE_ID" indexType="btree">
            <column name="league_id"/>
        </index>
    </table>

    <table name="zaca_events_registration" resource="default" engine="innodb" comment="Zacatrus Events Registrations">
        <column xsi:type="int" name="registration_id" unsigned="true" nullable="false" identity="true" comment="Registration ID"/>
        <column xsi:type="int" name="meet_id" unsigned="true" nullable="false" comment="Meet ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="status" length="20" nullable="false" default="confirmed" comment="Status (confirmed, waitlist)"/>
        <column xsi:type="varchar" name="phone_number" length="20" nullable="false" comment="Contact Phone Number"/>
        <column xsi:type="datetime" name="registration_date" nullable="false" comment="Registration Date"/>
        <column xsi:type="int" name="attendance_count" unsigned="true" nullable="false" default="0" comment="Attendance Count"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="registration_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_REGISTRATION_MEET_ID" table="zaca_events_registration" column="meet_id" referenceTable="zaca_events_meet" referenceColumn="meet_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_REGISTRATION_CUSTOMER_ID" table="zaca_events_registration" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="UNQ_ZACA_EVENTS_REGISTRATION_MEET_CUSTOMER">
            <column name="meet_id"/>
            <column name="customer_id"/>
        </constraint>
        <index referenceId="IDX_ZACA_EVENTS_REGISTRATION_MEET_ID" indexType="btree">
            <column name="meet_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_REGISTRATION_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_REGISTRATION_STATUS" indexType="btree">
            <column name="status"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_REGISTRATION_PHONE_NUMBER" indexType="btree">
            <column name="phone_number"/>
        </index>
    </table>

    <table name="zaca_events_location" resource="default" engine="innodb" comment="Zacatrus Events Locations">
        <column xsi:type="int" name="location_id" unsigned="true" nullable="false" identity="true" comment="Location ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Location Name"/>
        <column xsi:type="varchar" name="code" length="50" nullable="true" comment="Location Code"/>
        <column xsi:type="varchar" name="address" length="255" nullable="true" comment="Address"/>
        <column xsi:type="varchar" name="city" length="255" nullable="true" comment="City"/>
        <column xsi:type="varchar" name="postal_code" length="20" nullable="true" comment="Postal Code"/>
        <column xsi:type="varchar" name="country" length="2" nullable="true" comment="Country Code"/>
        <column xsi:type="decimal" name="latitude" scale="8" precision="10" nullable="true" comment="Latitude"/>
        <column xsi:type="decimal" name="longitude" scale="8" precision="11" nullable="true" comment="Longitude"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="location_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNQ_ZACA_EVENTS_LOCATION_CODE">
            <column name="code"/>
        </constraint>
        <index referenceId="IDX_ZACA_EVENTS_LOCATION_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_LOCATION_CITY" indexType="btree">
            <column name="city"/>
        </index>
    </table>

    <table name="zaca_events_event_type" resource="default" engine="innodb" comment="Zacatrus Events Event Types">
        <column xsi:type="int" name="event_type_id" unsigned="true" nullable="false" identity="true" comment="Event Type ID"/>
        <column xsi:type="varchar" name="code" length="50" nullable="false" comment="Event Type Code"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Event Type Name"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="false" default="0" comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="event_type_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNQ_ZACA_EVENTS_EVENT_TYPE_CODE">
            <column name="code"/>
        </constraint>
        <index referenceId="IDX_ZACA_EVENTS_EVENT_TYPE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_EVENT_TYPE_SORT_ORDER" indexType="btree">
            <column name="sort_order"/>
        </index>
    </table>

    <table name="zaca_events_attendance" resource="default" engine="innodb" comment="Zacatrus Events Attendance Log">
        <column xsi:type="int" name="attendance_id" unsigned="true" nullable="false" identity="true" comment="Attendance ID"/>
        <column xsi:type="int" name="registration_id" unsigned="true" nullable="false" comment="Registration ID"/>
        <column xsi:type="int" name="location_id" unsigned="true" nullable="false" comment="Location ID"/>
        <column xsi:type="date" name="attendance_date" nullable="false" comment="Attendance Date"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attendance_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_ATTENDANCE_REGISTRATION_ID" table="zaca_events_attendance" column="registration_id" referenceTable="zaca_events_registration" referenceColumn="registration_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_ZACA_EVENTS_ATTENDANCE_LOCATION_ID" table="zaca_events_attendance" column="location_id" referenceTable="zaca_events_location" referenceColumn="location_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="UNQ_ZACA_EVENTS_ATTENDANCE_REGISTRATION_DATE">
            <column name="registration_id"/>
            <column name="attendance_date"/>
        </constraint>
        <index referenceId="IDX_ZACA_EVENTS_ATTENDANCE_REGISTRATION_ID" indexType="btree">
            <column name="registration_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_ATTENDANCE_LOCATION_ID" indexType="btree">
            <column name="location_id"/>
        </index>
        <index referenceId="IDX_ZACA_EVENTS_ATTENDANCE_DATE" indexType="btree">
            <column name="attendance_date"/>
        </index>
    </table>
</schema>

