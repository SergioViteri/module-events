<?xml version="1.0"?>
<!--
/**
 * Zacatrus Events Web API Configuration
 *
 * @category    Zacatrus
 * @package     Zaca_Events
 * @author      Zacatrus
 */
-->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Public Events API (requires customer authentication) -->
    <route url="/V1/zacatrus-events/events" method="GET">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/events/:eventId" method="GET">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/events/:eventId/register" method="POST">
        <service class="Zaca\Events\Api\RegistrationRepositoryInterface" method="registerCustomer"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
            <parameter name="eventId" force="true">%eventId%</parameter>
        </data>
    </route>

    <route url="/V1/zacatrus-events/events/:eventId/register" method="DELETE">
        <service class="Zaca\Events\Api\RegistrationRepositoryInterface" method="unregisterCustomer"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
            <parameter name="eventId" force="true">%eventId%</parameter>
        </data>
    </route>

    <route url="/V1/zacatrus-events/my-registrations" method="GET">
        <service class="Zaca\Events\Api\RegistrationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <!-- Admin API -->
    <route url="/V1/zacatrus-events/stores" method="GET">
        <service class="Zaca\Events\Api\StoreRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Zaca_Events::stores"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/stores" method="POST">
        <service class="Zaca\Events\Api\StoreRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::stores"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/stores/:storeId" method="GET">
        <service class="Zaca\Events\Api\StoreRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Zaca_Events::stores"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/stores/:storeId" method="PUT">
        <service class="Zaca\Events\Api\StoreRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::stores"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/stores/:storeId" method="DELETE">
        <service class="Zaca\Events\Api\StoreRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Zaca_Events::stores"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/events" method="GET">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Zaca_Events::events_manage"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/events" method="POST">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::events_manage"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/events/:eventId" method="PUT">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::events_manage"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/events/:eventId" method="DELETE">
        <service class="Zaca\Events\Api\EventRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Zaca_Events::events_manage"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/leagues" method="GET">
        <service class="Zaca\Events\Api\LeagueRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Zaca_Events::leagues"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/leagues" method="POST">
        <service class="Zaca\Events\Api\LeagueRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::leagues"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/leagues/:leagueId" method="GET">
        <service class="Zaca\Events\Api\LeagueRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Zaca_Events::leagues"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/leagues/:leagueId" method="PUT">
        <service class="Zaca\Events\Api\LeagueRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Zaca_Events::leagues"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/leagues/:leagueId" method="DELETE">
        <service class="Zaca\Events\Api\LeagueRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Zaca_Events::leagues"/>
        </resources>
    </route>

    <route url="/V1/zacatrus-events/admin/registrations" method="GET">
        <service class="Zaca\Events\Api\RegistrationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Zaca_Events::registrations"/>
        </resources>
    </route>
</routes>

